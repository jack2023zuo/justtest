    mui.init();

    var loginButton = document.getElementById("qd");
    var danjishijian = true;

    loginButton.addEventListener("click", function() {
      if (danjishijian) {
        danjishijian = false;
        // 执行登录逻辑
        loginButton.disabled = true;
      }
    });
  </script>
